@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <form class="form-inline">
                <div class="input-prepend input-append">
                    <input type="text" name="group-message" id="group-message-text" placeholder="Type a message" />
                    <input type="text" name="group-name" id="group-name" placeholder="Type a User Name" />
                    <input type="button" id="groupmsg" class="btn" value="Send to User" />
                   
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/js/signalr/signalr.js"></script>
<script src="~/js/chatUser.js"></script>
