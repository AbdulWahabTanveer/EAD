<UserControl x:Class="Lecture42_WPF_Styles.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lecture42_WPF_Styles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="30" HorizontalAlignment="Center">
        <TextBlock  
     Text="Text Block 1"></TextBlock>
        <TextBlock   Style="{StaticResource RedTextBlock}"
     Text="Text Block 2"></TextBlock>
        <TextBlock   Style="{StaticResource GreyTextBlock}"
     Text="Text Block 3"></TextBlock>
        <TextBlock  Style="{StaticResource PurpleTextBlock }"
     Text="Text Block 4"></TextBlock>
    </StackPanel>
</UserControl>
