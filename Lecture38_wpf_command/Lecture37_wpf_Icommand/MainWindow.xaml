<Window x:Class="Lecture37_wpf_icommand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture37_wpf_icommand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel >
        <TextBox  x:Name="txtMessage" FontSize="50" ></TextBox>
        <Button Command="{Binding DisplayMessageCommand}" CommandParameter="{Binding ElementName=txtMessage, Path=Text}" FontSize="50" Content="Show Message"  ></Button>
    </StackPanel>
</Window>
